<%= content_for :title do%>
  Products
<% end%>
<%= append_page_button "New product", new_admin_product_path, class: "btn btn-primary"%>
<div class="row">
  <%= admin_widget_box 'products' do %>
    <%= render_admin_data_table(data: @products) do |data| %>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th>Vip_price</th>
          <th>Updated_at</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td>
              <% pic = product.pics.first %>
              <%= image_tag pic.file.small.url if pic.present? %>
            </td>
            <td><%= product.price %></td>
            <td><%= product.vip_price %></td>
            <td><%= product.updated_at %></td>
            <td>
              <%= link_to "Show", admin_product_path(product), class: "btn btn-mini btn-default"%>
              <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-mini btn-success"%>
              <%= link_to "Delete", admin_product_path(product), class: "btn btn-large btn-danger", method: :delete, "data-confirm" => "Are you sure you want to delete this productï¼Ÿ"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  <% end %>
</div>
