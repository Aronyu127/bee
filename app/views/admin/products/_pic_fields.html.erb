<div class="nested-fields">
  <% if f.object.new_record? %>
    <%= f.label 'pic' %>
    <%= f.input_field :file %>  
  <% else %>
    <%= f.label 'uploaded file' %>
    <div class="inform-image">
      <%= image_tag f.object.file.small.url %>  
    </div>
  <% end %>
  <div class="remove_pic_button">
    <%= link_to_remove_association 'remove', f, class: 'btn btn-danger' %>  
  </div>
</div>

