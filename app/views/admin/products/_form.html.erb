<%= f.input :name%>
<%= f.input :description, as: :text%>
<%= f.input :price%>
<%= f.input :vip_price%>
<h3>Pics</h3>
<%= f.simple_fields_for :pics do |pic| %>
  <%= render 'pic_fields', f: pic %>
<% end %>
<div class="link">
  <%= link_to_add_association 'Add pic', f, :pics, class: 'btn btn-lg btn-default' %>
</div>
<%= f.submit_cancel 'Send', cancel: admin_products_path %>
